@implements IDisposable
@using MyPortfolio.Shared.Services
@using MyPortfolio.Shared.Components.AccessCode
@inject NavigationManager NavigationManager
@inject AccessCodeService AccessCodeService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <i class="bi bi-lightning-charge"></i> POC Showcase
        </a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (!_hasValidAccess)
        {
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="ShowAccessModal" @onclick:stopPropagation="true">
                    <span class="bi bi-unlock-fill" aria-hidden="true"></span> Unlock Features
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <span class="nav-link text-success">
                    <span class="bi bi-check-circle-fill" aria-hidden="true"></span> Unlocked
                </span>
            </div>
            <div class="nav-item px-3">
                <button class="nav-link btn btn-link" @onclick="Logout" @onclick:stopPropagation="true">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                </button>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private bool _hasValidAccess;

    protected override void OnInitialized()
    {
        AccessCodeService.OnAccessStateChanged += UpdateAccessState;
        UpdateAccessState();
    }

    private void UpdateAccessState()
    {
        try
        {
            _hasValidAccess = AccessCodeService.HasValidAccess();
            InvokeAsync(StateHasChanged);
        }
        catch
        {
            _hasValidAccess = false;
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ShowAccessModal()
    {
        AccessCodeService.RequestUnlock();
    }

    private void Logout()
    {
        AccessCodeService.Logout();
        NavigationManager.NavigateTo("/", forceLoad: true);
    }

    public void Dispose()
    {
        AccessCodeService.OnAccessStateChanged -= UpdateAccessState;
    }
}
