@inherits LayoutComponentBase
@implements IDisposable
@using MyPortfolio.Web.Components.Layout
@using MyPortfolio.Shared.Services
@using MyPortfolio.Shared.Components.AccessCode
@inject AccessCodeService AccessCodeService

<div class="page">
    <div class="sidebar">
        <MyPortfolio.Web.Components.Layout.NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<footer class="footer bg-dark text-white-50">
    <div class="container-fluid py-3">
        <div class="text-center small">
            <p class="mb-0">&copy; @DateTime.Now.Year POC Showcase. All rights reserved.</p>
        </div>
    </div>
</footer>

<AccessCodeModal 
    IsVisible="@ShowAccessCodeModal" 
    OnModalClosed="@CloseAccessModal"
    OnAccessGranted="@OnAccessGranted" />

@code {
    private bool ShowAccessCodeModal;

    protected override void OnInitialized()
    {
        AccessCodeService.OnShowUnlockModal += ShowModal;
    }

    private void ShowModal()
    {
        ShowAccessCodeModal = true;
        InvokeAsync(StateHasChanged);
    }

    private void CloseAccessModal()
    {
        ShowAccessCodeModal = false;
        StateHasChanged();
    }

    private void OnAccessGranted()
    {
        ShowAccessCodeModal = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        AccessCodeService.OnShowUnlockModal -= ShowModal;
    }
}
