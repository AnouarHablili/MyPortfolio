@page "/poc/prioritizer"
@using MyPortfolio.Shared.Components.Prioritizer
@using MyPortfolio.Shared.Services
@using MyPortfolio.Shared.Models
@inject POCService POCService

<PageTitle>AI Task Prioritizer - POC</PageTitle>

<div class="prioritizer-page">
    @if (_pocMetadata == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> POC not found
        </div>
    }
    else
    {
        <div class="poc-header mb-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@_pocMetadata.Title</li>
                </ol>
            </nav>
            
            <div class="poc-metadata mb-3">
                <h1>@_pocMetadata.Title</h1>
                <p class="text-muted">@_pocMetadata.Description</p>
                @if (_pocMetadata.Technologies.Count > 0)
                {
                    <div class="technologies mb-3">
                        @foreach (var tech in _pocMetadata.Technologies)
                        {
                            <span class="badge bg-secondary me-2">@tech</span>
                        }
                    </div>
                }
            </div>
        </div>

        <PrioritizerView />
    }
</div>

@code {
    private POCMetadata? _pocMetadata;

    protected override void OnInitialized()
    {
        _pocMetadata = POCService.GetPOCById("prioritizer");
    }
}
