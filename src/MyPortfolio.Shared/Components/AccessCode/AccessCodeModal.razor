@namespace MyPortfolio.Shared.Components.AccessCode
@using MyPortfolio.Shared.Services
@inject AccessCodeService AccessCodeService

<div class="modal @(IsVisible ? "show" : "")" style="display: @(IsVisible ? "block" : "none"); z-index: 9999;" tabindex="-1">
    <div class="modal-backdrop @(IsVisible ? "show" : "")" style="z-index: 9998; background-color: rgba(0,0,0,0.5);"></div>
    <div class="modal-dialog modal-dialog-centered" style="z-index: 10000;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-unlock-fill"></i> Unlock Interactive Features
                </h5>
                <button type="button" class="btn-close" @onclick="OnCancel" disabled="@IsLoading"></button>
            </div>

            <div class="modal-body">
                <p>Enter your access code to unlock interactive features in the POCs.</p>
                <p class="text-muted small">
                    <i class="bi bi-info-circle"></i> You can browse all content without an access code.
                    The code only unlocks submit buttons and AI-powered features to prevent API cost abuse.
                </p>

                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-circle-fill"></i> @ErrorMessage
                    </div>
                }

                <div class="mb-3">
                    <label for="accessCodeInput" class="form-label">Access Code</label>
                    <input type="password"
                           class="form-control"
                           id="accessCodeInput"
                           name="accessCode"
                           @bind="AccessCode"
                           @bind:event="oninput"
                           @onkeypress="HandleKeyPress"
                           placeholder="Enter your access code"
                           disabled="@IsLoading"
                           autocomplete="off" />
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnCancel" disabled="@IsLoading">
                    Cancel
                </button>
                <button type="button"
                        class="btn btn-primary"
                        @onclick="OnSubmit"
                        disabled="@(IsLoading || string.IsNullOrWhiteSpace(AccessCode))">
                    @if (IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>Verifying...</span>
                    }
                    else
                    {
                        <span><i class="bi bi-unlock"></i> Unlock</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback OnModalClosed { get; set; }

    [Parameter]
    public EventCallback OnAccessGranted { get; set; }

    private bool IsLoading { get; set; }
    private string? ErrorMessage { get; set; }
    private string AccessCode { get; set; } = string.Empty;

    private async Task OnSubmit()
    {
        if (string.IsNullOrWhiteSpace(AccessCode))
            return;

        IsLoading = true;
        ErrorMessage = null;
        StateHasChanged();

        try
        {
            var result = await AccessCodeService.ValidateAccessCodeAsync(AccessCode);

            if (result.IsValid)
            {
                AccessCode = string.Empty;
                ErrorMessage = null;
                await OnAccessGranted.InvokeAsync();
                await OnModalClosed.InvokeAsync();
            }
            else
            {
                ErrorMessage = result.ErrorMessage ?? "Invalid access code";
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task OnCancel()
    {
        if (IsLoading)
            return;

        AccessCode = string.Empty;
        ErrorMessage = null;
        await OnModalClosed.InvokeAsync();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(AccessCode) && !IsLoading)
        {
            await OnSubmit();
        }
    }
}

